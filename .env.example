# Database: default to local SQLite for dev
DATABASE_URL=sqlite:///data/foia_ai.db

# Where to store downloaded files (PDFs/images)
BLOB_DIR=data/blob

# Networking
USER_AGENT=FOIA-AI-Bot/0.1 (contact: you@example.com)
RATE_LIMIT_PER_SEC=0.5
REQUEST_TIMEOUT=30
RETRY_TOTAL=3

# OCR
TESSERACT_CMD=/usr/local/bin/tesseract
OCR_LANG=eng

# Source toggles
ENABLE_CIA_CREST=true
ENABLE_FBI_VAULT=true
ENABLE_DIA_RR=true
